<%= render 'partial/navbar' %>
<div class="container">
    <div class="row">
        <div class="col-md-6 col-md-offset-3">
            <div class="panel panel-default">
                <div class="panel-heading" style="background-color:#FF6694">
                    <div class="text-center">
                        <span style="font-size:24px; color:white">デートの予約のための情報を入力をお願いします</span>
                    </div>
                </div>
            
                <div class="panel-body">            
                    <!-- ここからフォーム -->
                    <%= form_for ([@listing, @listing.reservations.new]) do |f| %>
                      <div class="row">
                      <div class="col-md-12 select">
                          <div class="form-group">
                              <label>名前</label>
                              <%= f.text_field :name, placeholder: "名前を入力してください", class: "form-control", required: "true" %>
                          </div>
                      </div>
                  </div>
                  <br>

                        <div class="row">
                            <div class="col-md-12 select">
                                <div class="form-group">
                                    <label>メールアドレス</label>
                                    <%= f.text_field :email, placeholder: "メールアドレスを記載してください", class: "form-control" %>
                                </div>
                            </div>
                        </div>
                        <br>

                        
                        <div class="row">
                      <div class="col-md-12 select">
                          <div class="form-group">
                              <label>ラインID</label>
                              <%= f.text_field :lineid, placeholder: "ラインIDを記載してください", class: "form-control", required: "true" %>
                          </div>
                      </div>
                  </div>
                  <br>

                  <div class="row">
                      <div class="col-md-12 select">
                          <div class="form-group">
                              <label>デート場所希望</label>
                              <%= f.text_field :place, placeholder: "デート場所希望を記載してください", class: "form-control", required: "true" %>
                          </div>
                      </div>
                  </div>

                  <div class="row">
                      <div class="col-md-12 select">
                          <div class="form-group">
                              <label>デート日付時間第一希望</label>
                              <%= f.text_field :date1, placeholder: "デート日付時間第一希望を記載してください", class: "form-control", required: "true" %>
                          </div>
                      </div>
                  </div>
                  <br>

                  <div class="row">
                      <div class="col-md-12 select">
                          <div class="form-group">
                              <label>デート日付時間第二希望</label>
                              <%= f.text_field :date2, placeholder: "デート日付時間第二希望を記載してください", class: "form-control", required: "true" %>
                          </div>
                      </div>
                  </div>
                  <br>

                  <div class="row">
                      <div class="col-md-12 select">
                          <div class="form-group">
                              <label>デート日付時間第三希望</label>
                              <%= f.text_field :date3, placeholder: "デート日付時間第三希望", class: "form-control", required: "true" %>
                          </div>
                      </div>
                  </div>
                  <br>

                        <div class="actions">
                            <%= f.submit "デート予約情報送信", class: "btn btn-default btn-lg",style:"margin-right:auto; margin-left:auto; display:block; background-color:#FF6694; color:white;" %>
                        </div>
                    <% end %>
                </div>
            </div>
        </div>
    </div>

</div>